  <div class="overlay">
    <div class="container" id="loginBox">
      <h1>Login Pengumuman Kelulusan</h1>
      <input type="text" id="nama" placeholder="Nama Lengkap" />
      <input type="text" id="nik" placeholder="NIK" />
      <button onclick="cekKelulusan()">Lihat Pengumuman</button>
    </div>

    <div class="container" id="hasilBox" style="display: none;">
      <h1>Hasil Kelulusan</h1>
      <div class="result">
        <p><span class="label">Nama:</span> <span id="r_nama"></span></p>
        <p><span class="label">Nomor Pendaftaran:</span> <span id="r_no"></span></p>
        <p><span class="label">Jalur Pendaftaran:</span> <span id="r_jalur"></span></p>
        <p><span class="label">Program Studi:</span> <span id="r_prodi"></span></p>
        <p><span class="label">Fakultas:</span> <span id="r_fakultas"></span></p>
        <p><span class="label">Status Kelulusan:</span> <span id="r_status"></span></p>
      </div>
      <div class="qr-code">
        <p style="font-size: 14px;">Scan QR Code untuk unduh dokumen kelulusan</p>
        <canvas id="qr"></canvas>
