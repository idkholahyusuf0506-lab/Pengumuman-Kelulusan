  <script>
    const dataMahasiswa = [{
        nama: "Idkholah Yusuf",
        nik: "1234567890123456",
        no_pendaftaran: "UAI2025001",
        jalur: "Reguler",
        prodi: "Sistem Informasi",
        fakultas: "Ilmu Komputer",
        status: "LULUS",
        link: "https://docs.google.com/spreadsheets/d/1PKcoKMkFfI_eH4CQfwdjgUZ3E8VZ6LNa/edit?usp=drive_link&ouid=110763640426614858341&rtpof=true&sd=true"
      },
      {
        nama: "Budi Santoso",
        nik: "9876543210123456",
        no_pendaftaran: "UAI2025002",
        jalur: "Beasiswa",
        prodi: "Manajemen",
        fakultas: "Ekonomi dan Bisnis",
        status: "LULUS",
        link: "https://drive.google.com/another-link"
      }
    ];

    function cekKelulusan() {
      const nama = document.getElementById("nama").value.trim().toLowerCase();
      const nik = document.getElementById("nik").value.trim();
      const mhs = dataMahasiswa.find(x => x.nama.toLowerCase() === nama && x.nik === nik);
      if (mhs) {
        document.getElementById("loginBox").style.display = "none";
        document.getElementById("hasilBox").style.display = "block";
        document.getElementById("r_nama").textContent = mhs.nama;
        document.getElementById("r_no").textContent = mhs.no_pendaftaran;
        document.getElementById("r_jalur").textContent = mhs.jalur;
        document.getElementById("r_prodi").textContent = mhs.prodi;
        document.getElementById("r_fakultas").textContent = mhs.fakultas;
        document.getElementById("r_status").textContent = mhs.status;
        // Buat QR Code
        QRCode.toCanvas(document.getElementById('qr'), mhs.link, {
          width: 120
        }, function(error) {
          if (error) console.error(error);
        });
      } else {
        alert("Data tidak ditemukan. Periksa kembali Nama dan NIK Anda.");
      }
    }

    function logout() {
      document.getElementById("loginBox").style.display = "block";
      document.getElementById("hasilBox").style.display = "none";
      // Kosongkan input dan hasil
      document.getElementById("nama").value = "";
      document.getElementById("nik").value = "";
      document.getElementById("r_nama").textContent = "";
      document.getElementById("r_no").textContent = "";
      document.getElementById("r_jalur").textContent = "";
      document.getElementById("r_prodi").textContent = "";
      document.getElementById("r_fakultas").textContent = "";
      document.getElementById("r_status").textContent = "";
      const canvas = document.getElementById("qr");
      const ctx = canvas.getContext("2d");
      ctx.clearRect(0, 0, canvas.width, canvas.height);
    }
  </script>
